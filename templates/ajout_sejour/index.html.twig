{% extends 'base.html.twig' %}

{% block title %}Séjour
{% endblock %}

{% block body %}
	<form>
		<div class="container">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto" style="margin-left:300px !important">
				<div class="card border-0 shadow rounded-3 my-5">
					<div class="card-body p-4 p-sm-5">
						<h5 class="card-title text-center mb-5 fw-light fs-5">Ajout d'un séjour</h5>
					
                        <a class="btn btn-primary" href="{{path('ajout_patient')}}" role="button">Ajouter un patient</a><br>
                        <small id="ajouterPatient" class="form-text text-muted">Ajoutez un patient uniquement si celui-ci n'a pas encore été ajouté</small>
						

					
						{{ form(formSejour, {'method':'POST'}) }}


						
						
					</div>
				</div>
			</div>
		</div>
	</form>
	
{% endblock %}
